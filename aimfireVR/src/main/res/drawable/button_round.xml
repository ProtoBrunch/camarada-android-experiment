<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="oval"  >
            <size 
                android:width="@dimen/circular_progress_drawable_radius"
                android:height="@dimen/circular_progress_drawable_radius"/>
            <stroke android:width="@dimen/circular_progress_drawable_ring_size" android:color="@color/silver" />
            <gradient android:angle="-90" android:startColor="@color/start_button_start_color_pressed" android:endColor="@color/start_button_end_color_pressed"  />            
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="oval"  >
            <size 
                android:width="@dimen/circular_progress_drawable_radius"
                android:height="@dimen/circular_progress_drawable_radius"/>
            <stroke android:width="@dimen/circular_progress_drawable_ring_size" android:color="@color/silver" />
            <solid android:color="#58857e"/>       
        </shape>
    </item>  
    <item >
        <shape android:shape="oval"  >
            <size 
                android:width="@dimen/circular_progress_drawable_radius"
                android:height="@dimen/circular_progress_drawable_radius"/>
             <stroke android:width="@dimen/circular_progress_drawable_ring_size" android:color="@color/silver" />
             <gradient android:angle="-90" android:startColor="@color/start_button_start_color" android:endColor="@color/start_button_end_color" />            
         </shape>
    </item>
</selector>